@model SistemaDeControleDeTCCs.Models.Usuario

@{
    ViewData["Title"] = "Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />
<div>
    <h4>Usuário: @Html.DisplayFor(model => model.Nome) @Html.DisplayFor(model => model.Sobrenome)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoUsuario.DescTipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome) @Html.DisplayFor(model => model.Sobrenome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curso.Nome)
        </dd>
        <dt class="col-sm-2">
            Telefone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div class="form-row">
    <div class="form-group col-md-2">
        <a class="btn btn-outline-info btn-block" asp-action="AddOrEdit" asp-route-id="@Model.Id"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a>
    </div>
    <div class="form-group col-md-2">
        <a class="btn btn-outline-secondary btn-block" asp-action="Index"><i class="fa fa-reply" aria-hidden="true"></i> Voltar</a>
    </div>
</div>
